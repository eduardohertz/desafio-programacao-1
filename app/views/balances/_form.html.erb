<%= simple_form_for(@balance, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= simple_fields_for(@balance_file) do |b| %>
  		<%= b.input :file, as: 'file' %>
  	<% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Enviar' %>
  </div>
<% end %>
